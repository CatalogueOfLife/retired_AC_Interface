<project default="build" basedir=".">
	<description>
		Annual Checklist Interface build file
    </description>

	<!-- Create the time stamp -->
	<tstamp />

	<property file="build.properties" />	
	<property name="build.tag" value="${DSTAMP}${TSTAMP}" />
	<property name="dist.name"
		value="${project.name}-${project.version}-${DSTAMP}${TSTAMP}.zip" />
	<property name="build" value="${basedir}/../build" />
		
	<target name="init">
	    <delete dir="${build}" />
		<!-- Create the build directory structure used by compile -->
		<mkdir dir="${build}" />		
		<mkdir dir="${build}/api" />
		<mkdir dir="${build}/coverage" />
		<mkdir dir="${build}/graph" />
		<exec executable="svn">
			<arg value="up" />
		</exec>
	</target>
	
	<target name="phpdoc">	    
         <exec executable="phpdoc">              
              <arg line="-ue on -t ${build}/api -tb /usr/share/php/data/phpUnderControl/data/phpdoc -o HTML:Phpuc:phpuc -d ${basedir}"/> 
         </exec>
	</target>
		
	<target name="build" depends="init,phpdoc" />
</project>