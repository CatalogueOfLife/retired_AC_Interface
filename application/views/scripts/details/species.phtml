<?php
if ($this->species instanceof ACI_Model_Taxa):
switch($this->species->taxa_status) {
    case ACI_Model_Taxa::STATUS_SYNONYM:
        printf (
            '<p>' . $this->translate('Selected_synonym') . ':</p>',
            '<i>' . $this->species->taxa_name . '</i> ' .
            $this->species->taxa_author
        );
    break;
    case ACI_Model_Taxa::STATUS_COMMON_NAME:
        printf (
            '<p>' . $this->translate('Selected_common_name') .
            ':</p>', '<i>' . $this->species->taxa_name . '</i>'
        );
    break;
}
echo $this->species->name;
else:
?>
<p><?php echo $this->translate('Species_not_found'); ?></p>
<?php
endif;
?>