<?php
$urlParams = array(
    'key' => $this->key,
    'match' => $this->match,
    'items' => $this->items,
    'sort' => $this->sort
);
if ($this->pageCount && $this->pageCount > 1): ?>
<div class="paginationControl">
<!-- Previous page link -->
<?php if (isset($this->previous)): ?>
  <a href="<?php echo $this->url(array_merge(array('page' => $this->previous), $urlParams)); ?>">
    &lt; <?php echo $this->translate('Previous'); ?>
  </a> |
<?php else: ?>
  <span class="disabled">&lt; <?php echo $this->translate('Previous'); ?></span> |
<?php endif; ?>

<!-- Show first page if not present -->
<?php if (!isset($this->pagesInRange[1])): ?>
    <a href="<?php echo $this->url(array_merge(array('page' => 1), $urlParams)); ?>">
        1
    </a> |
    <?php if (!isset($this->pagesInRange[2])): ?>
    ... |
    <?php endif; ?>
<?php endif; ?>

<!-- Numbered page links -->
<?php foreach ($this->pagesInRange as $page): ?>
  <?php if ($page != $this->current): ?>
    <a href="<?php echo $this->url(array_merge(array('page' => $page), $urlParams)); ?>">
        <?php echo $page; ?>
    </a> |
  <?php else: ?>
    <?php echo $page; ?> |
  <?php endif; ?>
<?php endforeach; ?>

<!-- Show lastpage if not present -->
<?php if ($this->pageCount != $page): ?>
    <?php if (($this->pageCount -1) != $page): ?>
        ... |
    <?php endif; ?>
    <a href="<?php echo $this->url(array_merge(array('page' => $this->pageCount), $urlParams)); ?>">
        <?php echo $this->pageCount; ?>
    </a> |
<?php endif; ?>

<!-- Next page link -->
<?php if (isset($this->next)): ?>
  <a href="<?php echo $this->url(array_merge(array('page' => $this->next), $urlParams)); ?>">
     <?php echo $this->translate('Next'); ?> &gt;
  </a>
<?php else: ?>
  <span class="disabled"> <?php echo $this->translate('Next'); ?> &gt;</span>
<?php endif; ?>
</div>
<?php endif; ?>